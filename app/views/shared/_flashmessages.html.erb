<% if flash!=nil %>
	<% flash.each do |key, value| %>
		<% if key.to_s == "error" || key.to_s == "alert" %>
			<div class="alert alert-danger">
                <button type="button" class="close" data-dismiss="alert">×</button>
                    <%= value %>

             </div>
		<% else %>				
			<div class="alert alert-success">
                <button type="button" class="close" data-dismiss="alert">×</button>
                    <%= value %>
             </div>
		<% end %>
	<% end %>
<% end %>
